<%- include("blogHeader") %>

<!-- Blog Content -->
<div class="container my-5">
  <div class="row g-4 ">
    <!-- Blog Image -->
    <div class="col-lg-6">
      <img src="/<%= data.blogImage%>" alt="Blog Image" class="img-fluid rounded shadow">
    </div>
    <!-- Blog Details -->
    <div class="col-lg-6">
      <h1 class="fw-bold mb-3"><%= data.blogName%></h1>
      <p class="text-muted mb-2"><i class="fas fa-calendar-alt me-2"></i> <%= data.createdAt%></p>
      <p class="text-secondar"><%- data.blogDesc%></p>
      
   

      <!-- Like and Comment Buttons -->
      <div class="mt-4 d-flex align-items-center gap-3">
        <button class="btn btn-outline-primary" >
          <i class="fas fa-thumbs-up me-2"></i> Like <span id="likeCount">0</span>
        </button>
        <button class="btn btn-outline-success">
          <i class="fas fa-comment me-2"></i> Comment
        </button>
      </div>
    </div>
  </div>

  <!-- Comment Section -->
  <div class="mt-5">
    <h4>Comments</h4>
    <ul class="list-group" ></ul>

    <div class="input-group mt-3">
      <input type="text"  class="form-control" placeholder="Write a comment...">
      <button class="btn btn-primary" id="">Post</button>
    </div>
  </div>
</div>
<%- include("blogFooter") %>
